{
  "manifest_version": 3,
  "name": "Firefox Automation Extension",
  "version": "1.0",
  "description": "Make your own automation easily.",
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.jpg" 
  },

  "permissions": [
    "activeTab", 
    "storage", 
    "scripting"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  }
}